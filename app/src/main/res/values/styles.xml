<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Header">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/asset_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="spinner">
        <item name="android:clickable">true</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:popupBackground">@color/color_background</item>
        <item name="android:background">@drawable/asset_background_spinner</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:paddingEnd">35dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingVertical">5dp</item>
    </style>
</resources>